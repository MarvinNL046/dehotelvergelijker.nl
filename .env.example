# Copy this file to .env.local and fill in your values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dehotelvergelijker
DIRECT_URL=postgresql://user:password@localhost:5432/dehotelvergelijker

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-secure-secret-key

# Hotel APIs (Contact providers for API keys)
BOOKING_API_KEY=
BOOKING_AFFILIATE_ID=
HOTELS_COM_API_KEY=
HOTELS_COM_PARTNER_ID=
EXPEDIA_API_KEY=
AGODA_API_KEY=

# Google Services
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=
GOOGLE_PLACES_API_KEY=

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_HOTJAR_ID=

# Email Service
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@dehotelvergelijker.nl

# Cache & Redis
REDIS_URL=redis://localhost:6379

# CDN & Storage
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_TOKEN=
NEXT_PUBLIC_CDN_URL=https://cdn.dehotelvergelijker.nl

# Monitoring
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# Feature Flags
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_FAVORITES=true
NEXT_PUBLIC_ENABLE_PRICE_ALERTS=true

# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api